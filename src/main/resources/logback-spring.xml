<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOGS" value="./logs" />

    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%C{1.}): %msg%n%throwable
            </Pattern>
        </layout>
    </appender>

    <appender name="GeneralLog"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log4j.dir}/wct-core.log</file>
        <encoder
                class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- Note that log4j.xml had name="DatePattern" value="'.'yyyy-MM-dd" -->
            <Pattern>%d{yyyy-MM-dd} %-5p [%t] %C{2} (%F:%L) - %m%n</Pattern>
        </encoder>

        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily and when the file reaches 10 MegaBytes -->
            <fileNamePattern>${log4j.dir}/wct-core-%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <!-- LOG everything at ERROR level -->
    <root level="INFO">
        <appender-ref ref="GeneralLog" />
    </root>

    <logger name="org.webcurator" level="${log4j.level}" additivity="false">
        <appender-ref ref="GeneralLog" />
    </logger>

    <logger name="org.hibernate" level="WARN" additivity="false">
        <appender-ref ref="GeneralLog" />
    </logger>

    <logger name="org.springframework" level="INFO" additivity="false">
        <appender-ref ref="GeneralLog" />
    </logger>

    <logger name="org.acegisecurity" level="WARN" additivity="false">
        <appender-ref ref="GeneralLog" />
    </logger>

    <logger name="org.archive.crawler" level="WARN" additivity="false">
        <appender-ref ref="GeneralLog" />
    </logger>

    <!-- Note that log4j.xml had FATAL level -->
    <logger name="org.springframework.web.servlet" level="ERROR" additivity="false">
        <appender-ref ref="GeneralLog" />
    </logger>

</configuration>
